<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Storage permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Network permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Notification permissions -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Foreground Service permissions (for 24/7 background operation) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- Boot completed permission (to restart service after reboot) -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Battery optimization bypass request -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- Wake lock for keeping service alive -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Exact alarm permission for reminder notifications (Android 12+) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />


    <application
        android:name=".JawafaiApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jawafai"
        tools:targetApi="31">

        <!-- Dashboard Activity -->
        <activity
            android:name=".view.dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.Jawafai" />

        <!-- Login Activity -->
        <activity
            android:name=".view.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Jawafai" />

        <!-- Registration Activity -->
        <activity
            android:name=".view.auth.RegistrationActivity"
            android:exported="false"
            android:theme="@style/Theme.Jawafai" />


        <!-- Main Activity - Updated with correct package -->
        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Jawafai">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- FCM Messaging Service -->
        <!-- <service
            android:name=".service.JawafaiFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service> -->

        <!-- Notification Listener Service for reading notifications from other apps -->
        <!-- Enhanced with foreground service and direct boot support for 24/7 operation -->
        <service
            android:name=".service.JawafaiNotificationListenerService"
            android:label="Jawafai Notification Listener"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
            android:exported="true"
            android:directBootAware="true"
            android:foregroundServiceType="dataSync|specialUse"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
            <!-- Declare special use for foreground service (Android 14+) -->
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="notification_listener_for_smart_replies" />
        </service>

        <!-- Boot Receiver for self-healing service restart -->
        <receiver
            android:name=".receiver.BootReceiver"
            android:enabled="true"
            android:exported="true"
            android:directBootAware="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <!-- Reminder Alarm Receiver - handles scheduled reminder notifications -->
        <receiver
            android:name=".service.ReminderAlarmReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.jawafai.ACTION_SHOW_REMINDER" />
            </intent-filter>
        </receiver>

        <!-- Reminder Action Receiver - handles notification actions (Mark Done, Snooze) -->
        <receiver
            android:name=".service.ReminderActionReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.jawafai.ACTION_MARK_DONE" />
                <action android:name="com.example.jawafai.ACTION_SNOOZE" />
            </intent-filter>
        </receiver>

    </application>
</manifest>